
generator client {
  provider = "prisma-client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model User{
  id String @id @default(uuid())
  name String
  email String
  streams Stream[]
  upvotes Upvote[]
}

model Stream{
  id String @id @default(uuid())
  type  StreamType
  active Boolean @default(true)
  upvote Upvote[]
  userId String
  user User @relation(fields: [userId],references: [id])
}
model Upvote{
  id String @id @default(uuid())
  userId String 
  streamId String
  user User @relation(fields: [userId],references: [id])
  stream Stream @relation(fields: [streamId],references: [id])
  @@unique([streamId,userId])
}

enum StreamType{
  Spotify
  Youtube
}

enum Provider{
  Google
}